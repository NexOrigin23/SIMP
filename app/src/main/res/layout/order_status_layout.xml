<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/slider_background"
        android:elevation="4dp"
        android:padding="5dp"
        android:text="Your current order status"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/current_order_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:elevation="3dp"
        android:src="@drawable/dod01"
        app:civ_border_color="#6b01ff"
        app:civ_border_width="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/current_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:padding="4dp"
        android:elevation="4dp"
        android:text="Out for delivery"
        android:textColor="@color/success"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_order_image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/slider_background"
        android:elevation="3dp"
        android:padding="5dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_order_status">

        <ImageView
            android:id="@+id/order_indicator"
            android:layout_width="15dp"
            app:tint="#d8d8d8"
            app:srcCompat="@drawable/location_ic"
            android:translationX="12dp"
            android:layout_height="15dp"/>

        <ProgressBar
            android:id="@+id/order_packed_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:progress="0"
            android:progressBackgroundTint="#d8d8d8"
            android:translationX="8dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/packed_indicator"
            android:layout_width="15dp"
            app:tint="#d8d8d8"
            app:srcCompat="@drawable/location_ic"
            android:translationX="4dp"
            android:layout_height="15dp"/>

        <ProgressBar
            android:id="@+id/pack_shipping_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:progress="0"
            android:progressBackgroundTint="#d8d8d8"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/shipping_indicator"
            android:layout_width="15dp"
            app:srcCompat="@drawable/location_ic"
            app:tint="#d8d8d8"
            android:translationX="-4dp"
            android:layout_height="15dp"/>

        <ProgressBar
            android:id="@+id/pack_delivered_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:translationX="-8dp"
            android:progress="0"
            android:progressBackgroundTint="#d8d8d8" />

        <ImageView
            android:layout_width="15dp"
            app:srcCompat="@drawable/location_ic"
            android:translationX="-12dp"
            app:tint="#d8d8d8"
            android:layout_height="15dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>